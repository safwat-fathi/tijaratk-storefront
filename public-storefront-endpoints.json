				}
			},
			"queryParams": {},
			"requestBody": null,
			"responses": {
				"200": "Public store basic data by slug"
			}
		},
		{
			"operationId": "StoresPublicController_getStoreTheme",
			"method": "GET",
			"path": "/public/stores/{slug}/theme",
			"summary": "Get public store theme",
			"pathParams": {
				"slug": {
					"type": "string",
					"description": "Unique store slug"
